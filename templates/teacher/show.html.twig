{% extends 'base.html.twig' %}

{% block title %}Teacher{% endblock %}

{% block body %}
    <h1>Teacher</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ teacher.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ teacher.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ teacher.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ teacher.email }}</td>
            </tr>
            <tr>
                <th colspan="2">Address</th>
            </tr>
            <tr>
                <th>street</th>
                <td>{{ teacher.address.street }}</td>
            </tr>
            <tr>
                <th>postalCode</th>
                <td>{{ teacher.address.postalCode }}</td>
            </tr>
            <tr>
                <th>city</th>
                <td>{{ teacher.address.city }}</td>
            </tr>
            <tr>
                <th>country</th>
                <td>{{ teacher.address.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('teacher_index') }}">back to list</a>

    <a href="{{ path('teacher_edit', {'id': teacher.id}) }}">edit</a>

    {{ include('teacher/_delete_form.html.twig') }}
{% endblock %}
